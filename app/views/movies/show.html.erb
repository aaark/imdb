<br><font size=5><%= link_to 'Home', movies_url %>  /  Movie#show &emsp;</font>
<br><br>
<div class=container>
	<div class=row>
		<div class=col-sm-8>
			<table class=table>
				<% @movie.attributes.each do |attribute| %>
					<tr>
						<% unless ((attribute[0] == 'created_at') or (attribute[0] == 'updated_at')) %>
							<td><b><%= attribute[0].upcase %></b></td>
							<% if attribute[0] == 'release_date' %>
								<td><%= attribute[1].strftime('%d  %B  %Y') %></td>
							<% else %>	
								<td><%= attribute[1] %></td> 
							<% end %>
						<%end%>
					<tr>
				<% end %>
			</table>
			<br><br><%= link_to '<button type=button class="btn btn-primary btn-lg"> EDIT </button>'.html_safe, edit_movie_path(@movie) %> &emsp;
			<%= link_to '<button class="btn btn-danger btn-lg"> DELETE </button>'.html_safe, movie_path(@movie), method: :delete, data:{confirm: 'Are you sure?'} %>
		</div>
		<div class=col-sm-4>
			<% if @movie.poster.attached? %>
				<%= image_tag @movie.poster, width: 320, height: 330 %>
				<br><!--<%= url_for(@movie.poster) %>-->
			<% else %>
			    <%= image_tag ('default.jpg'), width: 320, height: 330 %>
			<% end %>
		</div>
	</div><br><br><br>
	<!-- REVIEW SECTION -->
	<div class=row>
		<div class=col-sm-8>
			<% if @movie.reviews %>
				<table class=table border=2>
					<tr>
						<th>USER</th>
						<th>REVIEW</th>
						<th>RATING</th>
						<th>EDIT</th>
						<th>DELETE</th>
					</tr>
					<% @movie.reviews.each do |review| %>
						<tr>
						  <td><b><%= User.find(review.user_id).email %></b></td>
							<td><%= review.review %></td>
							<td><%= review.rating %></td>
							<% if current_user.id == review.user_id %>
								<td><%= link_to '<button class=btn-primary> EDIT </button>'.html_safe, edit_review_path(review) %></td>
								<td><%= link_to '<button class=btn-danger> DELETE </button>'.html_safe, review_path(review), method: :delete, data:{confirm: 'Are you sure?'} %></td>
							<% else %>
							  <td></td><td></td>
							<% end %>
						</tr>
					<% end %>
				</table>
			<% end %><br><br>
		</div>
		<div class=col-sm-4>
			<center><%= render 'reviews/reviews_form' %></center>
		</div>
	</div>
	<!-- REVIEW OVER -->
</div>